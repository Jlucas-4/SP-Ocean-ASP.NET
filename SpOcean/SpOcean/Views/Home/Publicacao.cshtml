@{
    ViewData["Title"] = "Home";
}

<div class="container">

    <main>
        <h1>SP OCEAN</h1>

        <section class="descubra">
            <h2>Publicações</h2>
            <div class="row">
                <div class="col-md-4">
                    <a asp-action="PraiaPrumirim" asp-controller="Home" class="beach-button">
                        <div class="card">
                            <img src="~/images/surfp.png" class="card-img-top" alt="Surf">
                            <div class="card-body">
                                <p class="card-text">Praia Prumirim</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a asp-action="PraiaGrande" asp-controller="Home" class="beach-button">
                        <div class="card">
                            <img src="~/images/bananap.png" class="card-img-top" alt="Banana Split">
                            <div class="card-body">
                                <p class="card-text">Praia Grande</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a asp-action="PraiaSonho" asp-controller="Home" class="beach-button">
                        <div class="card">
                            <img src="~/images/festivalp.png" class="card-img-top" alt="Festival">
                            <div class="card-body">
                                <p class="card-text">Praia dos Sonhos</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a asp-action="PraiaSonho" asp-controller="Home" class="beach-button">
                        <div class="card">
                            <img src="~/images/festivalp.png" class="card-img-top" alt="Festival">
                            <div class="card-body">
                                <p class="card-text">Praia do Sonho</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-action="PraiaPrumirim" asp-controller="Home" class="beach-button">
                        <div class="card">
                            <img src="~/images/surfp.png" class="card-img-top" alt="Surf">
                            <div class="card-body">
                                <p class="card-text">Praia Prumirim</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-action="PraiaGrande" asp-controller="Home" class="beach-button">
                        <div class="card">
                            <img src="~/images/bananap.png" class="card-img-top" alt="Banana Split">
                            <div class="card-body">
                                <p class="card-text">Praia Grande</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </section>
    </main>
</div>

<style>
    body {
        background-color: #E9F9FF;
    }

    h1 {
        color: #005374;
        text-align: center;
        font-size: 60px;
        margin-top: 36px;
        margin-bottom: 36px;
    }

    a {
        text-decoration: none;
    }

    .descubra {
        margin-top: 20px;
    }

        .descubra h2 {
            color: #0A749E;
            font-size: 30px;
            padding-bottom: 24px;
            text-align: left;
        }

    .card-link {
        text-decoration: none;
        color: inherit;
    }

    .card {
        margin-bottom: 20px;
        border: none;
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-body {
        text-align: center;
    }

    .card-img-top {
        border-radius: 10px;
    }
</style>
